<Window x:Class="Prescriptions.GUI.Views.Selectors.DrugSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prescriptions.GUI.Views.Selectors"
        mc:Ignorable="d"
        Title="DrugSelector" Height="300" Width="300">
    <StackPanel>
        <ScrollViewer>

            <ListBox ScrollViewer.CanContentScroll="True" ItemsSource="{Binding Drugs}" SelectedItem="{Binding SelectedDrug}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding Name}"/>
                            <Label Content="{Binding Form}"/>
                            <Label Content="{Binding Packaging}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <ComboBox ItemsSource="{Binding SelectedDrug.Refunds}" SelectedItem="{Binding SelectedDrug.AppliedRefund}"/>
        <Button Click="SelectButtonClick">Wybierz</Button>
    </StackPanel>
</Window>
