<Window x:Class="Prescriptions.GUI.Views.Selectors.PatientSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prescriptions.GUI.Views.Selectors"
        xmlns:model="clr-namespace:Prescriptions.API.Model;assembly=Prescriptions.API"
        mc:Ignorable="d"
        Title="PatientSelector" Height="300" Width="300">
    <StackPanel>
        <ListView x:Name="Data" ItemsSource="{Binding}" SelectionChanged="SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Name}"/>
                        <Label Content="{Binding Surname}"/>
                        <Label Content="{Binding Pesel}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Click="SelectButtonClick">Wybierz</Button>
    </StackPanel>
</Window>
