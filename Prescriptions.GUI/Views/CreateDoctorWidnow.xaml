<Window x:Class="Prescriptions.GUI.Views.CreateDoctorWidnow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prescriptions.GUI.Views"
        xmlns:model="clr-namespace:Prescriptions.API.Model;assembly=Prescriptions.API"
        mc:Ignorable="d"
        Title="CreateDoctorWidnow" Height="300" Width="300">
    <UniformGrid Columns="2">
        <Label>Imię</Label>
        <TextBox Text="{Binding Name, Mode=TwoWay}"/>

        <Label>Nazwisko</Label>
        <TextBox Text="{Binding Surname, Mode=TwoWay}"/>

        <Label>Numer uprawnień</Label>
        <TextBox Text="{Binding PermissionId, Mode=TwoWay}"/>

        <Button Click="SaveButtonClick">Zapisz</Button>
        <Button Click="CancelButtonClick">Anuluj</Button>
    </UniformGrid>
</Window>
